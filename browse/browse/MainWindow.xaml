<Window x:Class="browse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:browse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=" 1*"/>
            <RowDefinition Height=" 8*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Column="1" Grid.Row ="1" HorizontalAlignment="Left" Height="372" Margin="20,0,0,0" VerticalAlignment="Top" Width="772" >

            <StackPanel Name="stkMain">
                <StackPanel.Resources>
                    <Style TargetType="Control">
                        <Setter Property="Margin" Value="10"/>
                    </Style>
                </StackPanel.Resources>
                </StackPanel>


        </ScrollViewer>
        <Label x:Name="lblLabel" Grid.Row="0" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="197" FontSize="16"/>
    </Grid>
</Window>
