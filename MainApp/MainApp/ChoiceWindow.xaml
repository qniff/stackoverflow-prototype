<Window x:Class="MainApp.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainApp"
        mc:Ignorable="d"
        Title="" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="172" Height="114"/>
        <Button x:Name="btAsk" Content="Ask" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="472" Height="114" FontSize="25" Grid.Row="0" Click="BtAsk_Click"/>
        <Button x:Name="btBrowse" Content="Browse" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="472" Height="114" FontSize="25" Grid.Row="1" Click="BtBrowse_Click"/>
    </Grid>
</Window>
